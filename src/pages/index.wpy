<script>
    import wepy from 'wepy';
    import {getInterface, getWordMean} from '../api/api';
    import {exchangeFilter} from '../api/config';
    import Sound from '../components/sound';
    import BackTop from '../components/backTop'
    export default class Index extends wepy.page {
        config = {
            navigationBarTitleText: '主页'
        }
        components = {
          "en-sound":Sound, //单词
          "am-sound":Sound, //单词
          "sound":Sound,//例句
           "back-top":BackTop
        }

        data = {
            isFocus: false,
            isSearchResult: false,
            result: [],
            inputValue: '',
            baseInfo: {
                exchange: [],
                symbols: {}
            },
            detailsInfo:{
                ee_mean:{}, //英英词典
                sentence:{}, //双语例句
                netmean:{}, //网络释义
                synonym:{}, //同义词
                antonym:{},//反义词
                phrase:{},//词组搭配
                jushi:{},//例句
            },
            exchangeFilter: exchangeFilter,
            accordionListShow:[false,false,false,false,false],//控制所有折叠面板
            //music数据
            word_mp3List:[],
            soundEn:0, //英文
            soundAm:1, //美文
            isBackTopShow:false
        }

        methods = {
            //触发遮罩层关闭显示
            inputBlur() {
                this.isFocus = false;
            },
            inputFocus() {
                this.isFocus = true;
            },
            changeInput(event) {
                this.inputValue = event.detail.value;
            },
            getWordMean() {
                const _this = this;
                if (_this.inputValue == "" || _this.inputValue == null) {
                    wx.showToast({
                        title: '字符为空',
                        image: '../assets/img/ic-error.png',
                        duration: 2000
                    });
                    return;
                }
                _this.getWordMeanContent(_this.inputValue);
                _this.isSearchResult = true;
            },
            accordionItemShow(index){
                this.accordionListShow[index] = !this.accordionListShow[index];
                this.$apply();
            },
            getScrollOffset(event){
              if(event.detail.direction=="bottom"){
                this.isBackTopShow = true;
                return;
              }
              this.isBackTopShow = false;
            }
        }

        //获取联想单词
        async getInterfaceContent(value) {
            const _this = this;
            let params = {
                word: value
            }
            _this.result = [];
            let res = await getInterface(params);
            this.result = res.data.message;
            _this.$apply();
        }


        async getWordMeanContent(value) {

            const _this = this;
            //重置
            _this.baseInfo = {
              exchange: [],
              symbols: {}
            }
            _this.detailsInfo = {
              ee_mean:{},
              sentence:{},
              netmean:{},
              synonym:{},
              antonym:{},
              phrase:{},
              jushi:{},
            }

            let params = {
                word: value
            }
            wepy.showLoading({
              title: '加载中',
              mask:true
            })
            let res = await getWordMean(params);

            for (let item in res.data.baesInfo.exchange) {
                if (res.data.baesInfo.exchange[item].length !== 0) {
                    _this.baseInfo.exchange.push({
                        name: _this.exchangeFilter[item].value,
                        value: res.data.baesInfo.exchange[item].join('|').toString()
                    })
                }
            }
            _this.baseInfo = {
                exchange: _this.baseInfo.exchange, //再赋值
                symbols: res.data.baesInfo.symbols[0],
            };
            //赋值操作
            _this.detailsInfo = {
                ee_mean:res.data.ee_mean?res.data.ee_mean:{},
                sentence:res.data.sentence?res.data.sentence:{},
                netmean:res.data.netmean?res.data.netmean:{},
                synonym:res.data.synonym?res.data.synonym:{},
                antonym:res.data.antonym?res.data.antonym:{},
                phrase:res.data.phrase?res.data.phrase:{},
                jushi:res.data.jushi?res.data.jushi:{},
            }
            _this.word_mp3List = [_this.baseInfo.symbols.ph_en_mp3,_this.baseInfo.symbols.ph_am_mp3];
//            _this.$broadcast('words_mp3',_this.mp3SrcList);
            _this.$apply();
            wepy.hideLoading();
        }

        events = {
        }

        mixins = []
        watch = {
            inputValue(newValue){
                this.getInterfaceContent(newValue);
            },
        }

        onLoad() {
            let self = this;
//            wx.hideTabBar({aniamtion:true});
            this.$parent.getUserInfo(function (userInfo) {
                if (userInfo) {
                    self.userInfo = userInfo
                }
            })
        }
    }
</script>

